---
import { getTagConfig } from '../content/tags.config';

interface Props {
  tag: string;
  href?: string;
  size?: 'sm' | 'md' | 'lg';
}

const { tag, href, size = 'md' } = Astro.props;
const config = getTagConfig(tag);

// Usando exatamente o mesmo padding do .tech-tag original
const sizeClasses = {
  sm: 'px-2 py-0.5 text-xs',    // Bem compacto
  md: 'px-3 py-1 text-sm',      // Igual ao original
  lg: 'px-4 py-1.5 text-base'   // Um pouco maior
};

const baseClasses = `inline-flex items-center rounded-xl font-medium transition-all duration-200 ${sizeClasses[size]}`;

const tagStyles = {
  'background': config.bgColor,
  'color': config.textColor,
  'padding': '0.3rem 0.8rem',
  'border': `1px solid ${config.color}33`,
  'font-size': '0.8rem',
  'border-radius': '12px'
};
---
{
  href ? (
    <a href={href} class={baseClasses} style={tagStyles}>
      #{tag}
    </a>
  ) : (
    <span class={baseClasses} style={tagStyles}>
      #{tag}
    </span>
  )
}
