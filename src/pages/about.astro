---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

// Importa diretamente o Markdown
import about from '../content/pages/about.md';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={`About | ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
    <style>
      main {
        max-width: 720px;
        margin: 2rem auto;
        padding: 0 1rem;
      }
      h1 {
        font-size: 2rem;
        margin-bottom: 1rem;
      }
      article p {
        line-height: 1.6;
        margin-bottom: 1rem;
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <article>
        <h1>{about.frontmatter.title}</h1>
        <div innerHTML={about.default} />
      </article>
    </main>
    <Footer />
  </body>
</html>
